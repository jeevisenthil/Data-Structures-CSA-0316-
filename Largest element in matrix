#include <stdio.h>
int main() {
    printf("Name: Jeevitha\nReg No:192324020\n");
    int r,c;
    printf("Enter the no. of rows and Columns of the Matrix:");
    scanf("%d %d",&r,&c);
    int a[r][c];
    printf("\nEnter the elements of the matrix:\n");
    for(int i=0;i<r;i++){
    	for(int j=0;j<c;j++)
    	scanf("%d",&a[i][j]);
	}
	int max=a[0][0];
	for(int i=0;i<r;i++){
    	for(int j=0;j<c;j++){
    		if(a[i][j]>max)
    		max=a[i][j];
		}
	}
	printf("\nThe largest element in the matrix is %d",max);
    return 0;
}
